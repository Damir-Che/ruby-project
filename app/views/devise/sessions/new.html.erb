<div class="identification">
  <div class="indentification_content">
    <h4 class="">Log in</h4>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field pl-5 ">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control width_puts_to_identification', maxlength: 20 %>
      </div>




      <!----------------------------------------------------------------------------------------->

      <div class="pas field pl-5">
        <%= f.label :password %>
        <span class="ml-4">
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "forgot password?", new_password_path(resource_name) %>
        <% end %>
      </span>
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control width_puts_to_identification', maxlength: 20 %>
      </div>

      <!----------------------------------------------------------------------------------------->




      <% if devise_mapping.rememberable? %>
        <div class="field pl-5">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions pl-5">
        <!--<%= f.submit "Log in" %>-->
        <%= f.submit "Log in", class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
