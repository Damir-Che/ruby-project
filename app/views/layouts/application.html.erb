<!DOCTYPE html>
<html>
  <head>
    <title>ProjectPosts</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav class="navbar navbar-expand-lg navbar-gray bg-gray" style="background: dimgray">


      <form class="identification-form form-inline my-2 my-lg-0 pull-right">

          <% if user_signed_in? %>
            <span>Здравствуйте, <%= current_user.email %></span>
            <%= link_to 'Выйти', destroy_user_session_path, :method => :delete, class: 'btn btn-primary' %>
          <% else %>
            <%= link_to 'Войти', new_user_session_path, class: 'mr-2 btn btn-primary' %>
            <%= link_to 'Зарегистрироваться', new_user_registration_path, class: 'btn btn-primary'%>
          <% end %>

      </form>
  </nav>


    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <div class="container">
      <%= yield %>
    </div>


  </body>
</html>
